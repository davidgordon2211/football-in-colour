<div class="global-container">
  <div class="card login-form">
    <div class="card-body">
      <h3 class="card-title text-center">log in</h3>
      <div class="card-text">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs form-group">
              <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, class: "form-control form-control-sm" %>
            </div>
            <div class="form-group">
              <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, class: "form-control form-control-sm" %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "log in", class:"btn btn-block c-button__main" %>
            </div>
          <% end %>

          <div class="sign-up">
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</div>
